# SSH wrapper that combines multiple ssh config files into one
ssh () {
    echo "# DO NOT EDIT THIS FILE!" > ~/.ssh/config
    echo "# ======================" >> ~/.ssh/config
    cat ~/.ssh/config.* >> ~/.ssh/config
    /usr/bin/ssh "$@"
}

# curl helpers
alias http-headers="curl -s -D - -o /dev/null"
